{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "first-install": "yarn install && husky install",
    "start": "nest start",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "check": "npx npm-check -s -u",
    "test": "npx jest",
    "test:unit": "npm run test -- --config ./jest-unit.config.js",
    "test:staged": "npm run test -- --findRelatedTests",
    "test:watch": "npm run test -- --watch --config ./jest-unit.config.js",
    "test:cov": "npm run test -- --coverage --config ./jest-unit.config.js",
    "test:e2e": "npm run test -- --config ./jest-e2e.config.js",
    "start:dev": "nest start --watch",
    "start:debug": "export NODE_ENV=development && ts-node-dev --respawn --transpile-only --inspect=0.0.0.0:9229 --ignore-watch node_modules -r tsconfig-paths/register ./src/main.ts",
    "start:prod": "export NODE_ENV=production && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:staged": "eslint --fix",
    "migration:create": "npx typeorm migration:create ./typeorm-migrations/$npm_config_name -o",
    "migration:generate": "npx typeorm migration:generate -d ./dist/typeorm.migration-config.js ./typeorm-migrations/$npm_config_name -o",
    "migration:run": "npx typeorm migration:run -d ./dist/typeorm.migration-config.js",
    "migration:revert": "npx typeorm migration:revert -d ./dist/typeorm.migration-config.js",
    "save-routes-db": "SAVE_ROUTES=true node dist/main.js",
    "generate:entity": "nest g -c @lenus/generator entity",
    "generate:endpoint": "nest g -c @lenus/generator endpoint",
    "test:module": "npx jest src/applications/$npm_config_module",
    "prepare-husky": "husky install",
    "release": "npm run test:unit && npx semantic-release"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.363.0",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.0.5",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.5",
    "@nestjs/cqrs": "^10.0.1",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/mapped-types": "^2.0.2",
    "@nestjs/microservices": "^10.0.5",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/swagger": "^7.1.1",
    "@nestjs/terminus": "^10.0.1",
    "@nestjs/typeorm": "^10.0.0",
    "amqp-connection-manager": "^4.1.13",
    "axios": "^1.5.1",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.2.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.3",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.3",
    "npm": "^9.7.2",
    "npm-check-updates": "^16.10.13",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@jest-mock/express": "^2.0.2",
    "@nestjs/cli": "^10.1.4",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/express": "^4.17.17",
    "@types/faker": "^6.6.8",
    "@types/jest": "29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^20.3.3",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "commit-msg-linter": "^1.0.0",
    "commitizen": "^4.3.0",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "16.3.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "29.6.0",
    "jest-mock-extended": "^3.0.4",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "semantic-release": "^22.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
